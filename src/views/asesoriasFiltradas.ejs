<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Amigos Académicos</title>
  <% include partials/head %>

</head>

<body>
  <div class="container">
    <div class="col-sm-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center">
            <span class="fa fa-sign-in"></span>Consultar Asesorías
          </h1>

          <% if (message.length > 0) { %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
          <% } %>

          <form action="/listarAsesoriasFiltradas" id="formulario" method="post">
            <div class="form-group">
              <label for="identificador">Digite la fecha inicial</label>
              <input type="date" id="fechaInicio" name="fechaInicial" class="form-control" required="required">
              <label for="identificador">Digite la fecha final</label>
              <input type="date" id="fechaFin" name="fechaFinal" class="form-control" required="required">
              <input type="hidden" id="serialAmigo" name="serialAmigo" value="<%=serial%>" class="form-control" required="required">
              <input type="submit" class="btn btn-dark btn-lg" value="Listar Asesorías.">
            </div>
          </form>

          <script src="/socket.io/socket.io.js"></script>
          <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
          <hr>

        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <form action="/carnet" method="post">
      <input type="hidden" name="serial" id="serial" value="<%=serial%>">
      <input type="submit" class="btn btn-dark btn-lg" value="Regresar">
    </form>
  </div>

</body>

</html>