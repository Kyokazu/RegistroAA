<!DOCTYPE html>
<html lang="en">

<head>
	<title>Amigos Académicos</title>
	<% include partials/head %>
</head>

<body>

	<div class="container">
		<div class="card text-center mt-5">
			<div class="card-body">
				<h1><span class="fa fa-block"></span>¡Bienvenido,<%=datos.nombre%>!</h1>

				<% if (message.length > 0) { %>
				<div class="alert alert-success">
					<%= message %>
				</div>
				<% } %>

				<div>
				<form action="/registrarAmigoAcademico" method="post">
					<input type="hidden" name="serial" id="serial" value="<%=datos.serialCarnet%>">
					<input type="submit" class="btn btn-dark btn-lg" value="Registrar Amigo Académico">
				</form>
			</div>
			<div>
				<form action="/listarAmigos" method="post">
					<input type="hidden" name="serial" id="serial" value="<%=datos.serialCarnet%>">
					<input type="submit" class="btn btn-dark btn-lg" value="Consultar Amigos Académicos">
				</form>
			</div>
			<div>
				<form action="/listarEstudiantes" method="post">
					<input type="hidden" name="serial" id="serial" value="<%=datos.serialCarnet%>">
					<input type="submit" class="btn btn-dark btn-lg" value="Consultar Estudiantes">
				</form>
			</div>
			<div>
				<form action="/consultarAsistencia" method="post">
					<input type="hidden" name="serial" id="serial" value="<%=datos.serialCarnet%>">
					<input type="submit" class="btn btn-dark btn-lg" value="Consultar Asistencias">
				</form>
			</div>
			</div>
		</div>
	</div>

	<div class="text-center">
		<p><a href="/">Atrás</a></p>
	  </div>
	<script src="/socket.io/socket.io.js"></script>
	<script src="https://code.jquery.com/jquery-1.11.1.js"></script>

</body>

</html>